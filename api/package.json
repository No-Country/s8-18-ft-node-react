{
  "name": "api-inventory-management",
  "version": "1.0.0",
  "description": "Software API for inventory management.",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/server.ts",
    "lint": "eslint .",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:push:test": "dotenv -e .env.test npx prisma db push",
    "docker:dev:up": "docker-compose -f ../docker-compose.dev.yaml up -d",
    "docker:dev:down": "docker-compose -f ../docker-compose.dev.yaml down",
    "test:watch": "npm run docker:dev:up && dotenv -e .env.test -- npx prisma migrate dev && dotenv -e .env.test -- npx jest --watch --runInBand",
    "test": "dotenv -e .env.test -- npm run test:unit",
    "test:unit": "dotenv -e .env.test -- jest --coverage"
  },
  "keywords": [
    "typescript",
    "node",
    "express",
    "postgres"
  ],
  "author": "S8-18-Ft-Node-React",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/jest": "^29.5.1",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.8",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "eslint": "^8.40.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prisma": "^4.14.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1"
  },
  "dependencies": {
    "@prisma/client": "^4.14.0",
    "@types/express": "^4.17.17",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jose": "^4.14.4",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "zod": "^3.21.4"
  }
}
